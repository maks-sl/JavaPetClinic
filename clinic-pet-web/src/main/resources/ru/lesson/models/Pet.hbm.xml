<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.lesson.models.Pet" table="pet">
        <meta attribute="class-description">
            This class contains the pet detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="type_id" column="type_id" type="int"/>

        <many-to-one name="owner" column="client_id" class="ru.lesson.models.Client" cascade="save-update" />

    </class>
</hibernate-mapping>